<body>
	<!--header-->
	<script src="~/js/responsiveslides.min.js"></script>
	<script>

		$(function () {
		  $("#slider").responsiveSlides({
			auto: true,
			nav: true,
			speed: 500,
			namespace: "callbacks",
			pager: false,
		  });
		});
	</script>

	@Html.Partial("_Header")
